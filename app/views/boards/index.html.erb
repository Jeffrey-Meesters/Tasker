<!DOCTYPE html>
<html>
<header>

</header>
<body>

<!--Create boards -->
  <div class="form-group">
    <%= render 'boards/boardsform' %>
  </div>

<!-- show boards -->
  <ul class="boards">
    <% @boards.each do |board| %>
      <%  @board=board %>
    <li class="board">
      <%= link_to @board.title, board_path( @board[id=:id]) %>
      <%= link_to "Delete", board_path( @board[id=:id] ), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-success" %>
    </li>
      <%end%>
  </ul>

</body>
</html>
